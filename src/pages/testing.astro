---
import Layout from '../layouts/Layout.astro';

const name = 'Team';
const style = 'purple';

const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');

const users = ['Nick', 'Jimmy', 'Chris', 'Jonathan'];

const jsonUsers = await response.json();

const visible = false;
---
<Layout>
	<h1 class={style}>Hello {name}</h1>

	<ul>
		{users.map(user =><li>{user}</li>)}
	</ul>

	<ul>
		{jsonUsers.map(user =><li>{user.name}</li>)}
	</ul>

	{visible && <p>I am visible</p>}

	{visible ? <p>I am visible</p> : <p>Not visible</p>}

</Layout>

<style>
	h1 {
		color: red;
		width: 100%;
		text-align: center;
	}

	.purple {
		color: purple;
	}
</style>