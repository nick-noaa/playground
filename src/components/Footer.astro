---
import logo from '../images/logo.svg';
---

<footer class="footer">
  <div class="container">
    <div>
      <div class="logo">
        <a href="/">
          <img src={logo} alt="" />
        </a>
      </div>
      <p>Copyright Â© <span class="copyrightYear"></span> NCEI</p>
    </div>
    <div>
      <h3>Links</h3>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    color: #fff;
    text-align: center;
    padding: 20px;
    margin-top: 60px;
  }
  .footer .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .footer a {
    color: #a741ff;
  }
  .footer a:hover {
    text-decoration: underline;
  }
  .footer h3 {
    margin-bottom: 10px;
  }
  .footer div:nth-child(1) {
    text-align: left;
  }
  .footer img {
    height: 35px;
    vertical-align: middle;
  }
  @media (max-width: 500px) {
    .footer div:nth-child(2) {
      display: none;
    }
  }
</style>

<script>
  document.querySelector('#copyrightYear').textContent =
    new Date().getFullYear();
</script>
