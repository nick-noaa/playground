---
import { Icon } from 'astro-icon';
const response = await fetch('https://www.ncei.noaa.gov/alerts/api');
const { ...alerts } = await response.json();
const alertTitle = alerts[0].title[0];
const alertBody = alerts[0].body[0];
---

<div class="alert">
  <Icon name="mdi:lightbulb" width="25" color="var(--clr-base)" />
  <div class="content">
    <h2>{alertTitle.value}</h2>
    <Fragment set:html={alertBody.processed} />
  </div>
</div>

<style>
  .alert {
    color: white;
    background-color: var(--clr-info);
    background-color: blue;
    padding: 1em;
    max-width: 50rem;
    margin: 5rem auto;
    font-size: 15px;
    display: flex;
    align-items: flex-start;
    gap: 0.5em;
    border-left: 15px solid var(--clr-accent);
    border-left: 15px solid green;
  }
  .content {
  }
  h2 {
    font-size: 20px;
    padding-bottom: 0.5em;
  }
</style>
